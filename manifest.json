{
    "name": "Youtube Lister",
    "version": "1.0",
    "manifest_version": 2,
    "description": "List Youtube Playlists with one Click!",
    "permissions": [
        "activeTab",
        "declarativeContent"
    ],
    "icons": {
        "16": "images/logo.png",
        "32": "images/logo.png",
        "48": "images/logo.png",
        "128": "images/logo.png"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
      },
    "page_action": {
        "default_icon": {
            "16": "images/logo.png",
            "32": "images/logo.png",
            "48": "images/logo.png",
            "128": "images/logo.png"
        },
        "default_title": "Click to make list of videos",
        "default_popup": "popup.html"
    }
}